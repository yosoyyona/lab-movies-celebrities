<h2> Add a new celebrity </h2>

<form action="/celebrities/create" method="POST">
    <label> Name:
        <input type="text" name="name" />
    </label>
    <br>

    <label> Occupation:
        <input type="text" name="occupation" />
    </label>
    <br>

    <label> Catch Phrase:
        <input type="text" name="catchPhrase" />
    </label>

    <br>

    <button type="submit"> Add the celebrity </button>
</form>

<div>
    {{#if message}}
        <p><b>{{message}}</b></p>
    {{/if}}
</div>